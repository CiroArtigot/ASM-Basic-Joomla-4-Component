<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Algosemueve\Component\Algosemueve\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_MODIFIED_BY"/>
    <field name="firstname" filter="safehtml" type="text" label="COM_ALGOSEMUEVE_FORM_LBL_LEAD_FIRSTNAME" description="COM_ALGOSEMUEVE_FORM_DESC_LEAD_FIRSTNAME" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_FIRSTNAME"/>
    <field name="lastname" filter="safehtml" type="text" label="COM_ALGOSEMUEVE_FORM_LBL_LEAD_LASTNAME" description="COM_ALGOSEMUEVE_FORM_DESC_LEAD_LASTNAME" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_LASTNAME"/>
    <field name="description" editor="|" buttons="false" filter="JComponentHelper::filterText" type="editor" label="COM_ALGOSEMUEVE_FORM_LBL_LEAD_DESCRIPTION" description="COM_ALGOSEMUEVE_FORM_DESC_LEAD_DESCRIPTION" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_DESCRIPTION"/>
    <field name="email" validate="email" type="email" label="COM_ALGOSEMUEVE_FORM_LBL_LEAD_EMAIL" description="COM_ALGOSEMUEVE_FORM_DESC_LEAD_EMAIL" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_EMAIL"/>
    <field name="catid" extension="com_algosemueve.leads" type="category" label="COM_ALGOSEMUEVE_FORM_LBL_LEAD_CATID" description="COM_ALGOSEMUEVE_FORM_DESC_LEAD_CATID" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_CATID"/>
    <field name="tags" mode="ajax" multiple="true" custom="allow" type="tag" label="JTAG" description="JTAG_DESC" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_TAGS"/>
    <field name="image" directory="" type="media" label="COM_ALGOSEMUEVE_FORM_LBL_LEAD_IMAGE" description="COM_ALGOSEMUEVE_FORM_DESC_LEAD_IMAGE" hint="COM_ALGOSEMUEVE_FORM_LBL_LEAD_IMAGE"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
